<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mMAinLAyout">

        <ImageView
            android:layout_alignParentTop="true"
            android:id="@+id/mImageUser"
            android:layout_alignParentStart="true"
            android:scaleType="centerInside"
            android:background="@drawable/rounded_circle"
            android:layout_width="40dp"
            android:layout_marginEnd="8dp"
            android:layout_height="40dp" />


        <ABS_CUSTOM_VIEW.TextViewSemiBold
            android:id="@+id/mTextMsgBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/mImageUser"
            android:background="@mipmap/ic_chat_box_receive"
            android:textSize="17dp"
            android:text="ghj"
            android:padding="8dp"
            android:textColor="@color/white" />

        <ImageView
          android:visibility="gone"
            android:id="@+id/mImgBody"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:layout_toEndOf="@+id/mImageUser"
            android:background="@mipmap/ic_chat_box_receive"
            android:padding="10dp"/>

        <ImageView

            android:id="@+id/mImgPlay"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:layout_toEndOf="@+id/mImageUser"
            android:src="@drawable/rounded_downloaded"
            android:layout_centerHorizontal="true"
            android:padding="40dp"/>

        <ProgressBar
            android:visibility="gone"
            android:layout_toEndOf="@+id/mImageUser"
            android:layout_centerHorizontal="true"
            android:id="@+id/progressBar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="40dp"
            android:indeterminateDrawable="@drawable/progressbar_custom"
            android:background="@android:color/transparent" />

    </RelativeLayout>

    <ABS_CUSTOM_VIEW.TextViewRegular
        android:id="@+id/mTextMsgTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_below="@+id/mMAinLAyout"
        android:text="11:40 AM"
        android:textColor="@color/black"
        android:textSize="11sp" />
</RelativeLayout>